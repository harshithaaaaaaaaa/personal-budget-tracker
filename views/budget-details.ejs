<%- include("partials/header.ejs") %>
    <title>Budget Details</title>
    </head>

    <body>
        <%- include("partials/navBar.ejs") %>

            <div class="income-table">
                <table>
                    <tr>
                        <th>Month</th>
                        <th>Budget</th>
                        <th>Date of Entry</th>
                    </tr>

                        <% budget.forEach(function(i) { const createdAt=new Date(i.created_at).toLocaleString('en-GB', {
                            year: "numeric" , month: "2-digit" , day: "2-digit" , hour: "2-digit" , minute: "2-digit" ,
                            second: "2-digit" , hour12: true,});%>
                            <% const monthNames=[ "January" , "February" , "March" , "April" , "May" , "June" , "July"
                        , "August" , "September" , "October" , "November" , "December" ]; const today=new Date(); const
                        monthName=monthNames[i.budget_month.getMonth()]; %>
                            <tr>
                                <td>
                                    <%= monthName %>
                                </td>
                                <td>
                                    <%= i.budget_amount %>
                                </td>
                                <td>
                                    <%= createdAt %>
                                </td>
                            </tr>
                            <% }); %>
                </table>
            </div>
            </div>
            </div>
            <%- include("partials/footer.ejs") %>